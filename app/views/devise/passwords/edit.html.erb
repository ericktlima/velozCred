<h2>Alterar senha</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "form-signin", autocomplete: "off" }) do |f| %>

  <%= image_tag "logo.jpg", class: "mb-4 img-logo", alt: "Veloz Cred" %>

  <%= devise_error_messages! %>

  <%= f.hidden_field :reset_password_token %>

    <%= f.password_field :password, autofocus: true, autocomplete: "off", class: "form-control", placeholder: "Nova senha", required: "required" %>

    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Confirmar nova senha" required: "required" %>

    <%= f.submit "Alterar senha", class: "btn btn-lg btn-primary btn-block",  %>
    <%= link_to "Sair", destroy_agent_session_path, method: :delete %>
<% end %>
